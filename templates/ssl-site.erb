server {

  listen   <%= node['nginx']['port'] %> default_server;

  server_name <%= node['centos-nginx-acme']['external_site'] %>;

  return 301 https://<%= node['centos-nginx-acme']['external_site'] %>:<%= node['nginx']['ssl_port'] %>$request_uri;
}

server {

  listen   <%= node['nginx']['ssl_port'] %> default_server;

  ssl    on;
  ssl_certificate     /etc/ssl/<%= node['centos-nginx-acme']['external_site'] %>.crt;
  ssl_certificate_key /etc/ssl/<%= node['centos-nginx-acme']['external_site'] %>.key;

  server_name <%= node['centos-nginx-acme']['external_site'] %>;

  access_log /var/log/nginx/<%= node['centos-nginx-acme']['external_site'] %>.access.log;
  error_log /var/log/nginx/<%= node['centos-nginx-acme']['external_site'] %>.error.log;

  location / {

    proxy_pass         http://127.0.0.1:<%= node['centos-nginx-acme']['internal_port'] %>;

    proxy_set_header   Host $host;
    proxy_set_header   X-Real-IP $remote_addr;
    proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Host $server_name;

    proxy_set_header   X-Forwarded-Proto https;

    proxy_read_timeout  1200s;

    sub_filter "http://<%= node['centos-nginx-acme']['internal_site'] %>(:<%= node['centos-nginx-acme']['internal_port'] %>)?" "https://<%= node['centos-nginx-acme']['external_site'] %>:<%= node['nginx']['ssl_port'] %>" ;
    sub_filter_once off;
    sub_filter_last_modified on;
    sub_filter_types *;
  }
}
